{{#if produto }}
    <div class="row">
      <a href="/beb/limpar"><button class="btn btn-warning"style="position: absolute; margin-left: 75%">Limpar o carrinho </button></a>
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{#each produto }}
                    <li class="list-group-item">
                        <strong>{{ this.item.title }}</strong>
                        <span class="badge badge-success" >R${{ this.price }}</span>
                            
                            <div class="btn-group" style=" position: absolute; left: 80%">
                               <a href="/beb/reduce/{{this.item._id}}"><button type="button" class="btn btn-default btn-sm" style="    border: 1px solid #000;
    margin-bottom: 19px;
    width: 29px;
    height: 29px;">
                                            <label style="color: red; font-size: 40px; margin-top:-25px; margin-left:-3px">-</label>   </button>
                                </a>
                                <div class="marmita-counter__value" aria-live="polite" style="    margin-left: 12px;
    margin-right: 10px;">{{ this.qty }}</div>


                             <a href="/beb/adc/{{this.item._id}}">   <button type="button" class="btn btn-default btn-sm" style="    border: 1px solid #000;
    margin-bottom: 19px;
    width: 29px;
    height: 29px;">
                           <label style="color: red; font-size: 35px; margin-top:-20px; margin-left:-6px">+</label> 
                                </button></a>
                            </div>
                      <!--
                        <div class="btn-group">

                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Remover <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="/beb/reduce/{{this.item._id}}" style="color: black;">Remover um</a></li>
                                <li><a href="/beb/remove/{{this.item._id}}"  style="color: black;">Remover tudo</a></li>
                            </ul>
                        </div>-->


                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total: R${{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/beb/checkout" type="button" class="btn btn-success">Pagar em dinheiro</a>
               <a href="/beb/pagamentopp" type="button" class="btn btn-success">Pagar no picpay</a>
        </div>
    </div>
{{else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>NÃ£o tem itens no carrinho.</h2>
        </div>
    </div>
{{/if}}