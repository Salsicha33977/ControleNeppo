{{#each produto}}

 <div class="row">
   {{#each this }}
      <div class="col-sm-6 col-md-4" style="padding: 35px">
        <div class="thumbanail">
          <img src="{{this.img}}" class="img-responsive" alt="..." style="  max-width: 100%;
  height: 300px;" />
            <div class="caption">
                <h5>{{this.title}}</h5>
                    <div class="clearfix">
                         <div class="price pull-left">Quantidade:{{quantidade}}</div>
                       <div class="price pull-left">R${{this.price}}</div>
                       
                       <div class="btn-group" role="group" >
                         <a href="/admin/edit/{{_id}}"> <button class="btn btn-warning mt-1" >Editar</button></a>
                       </div>
                      <div class="btn-group" role="group" >
                        <form method="POST" action="/admin/delet">
                         <input type="hidden" name="id" value="{{this._id}}">
                        <button type="submit" class="btn btn-danger mt-1" style="color: white">Remover</button>
</div>
                         <!-- <a value="{{this._id}}" class="btn btn-danger pull-right">Remover</a>
                        -->
                        </form>
                        </div>
                       </div>
             </div>
        </div>
  {{/each}}
      </div>

{{/each}}


